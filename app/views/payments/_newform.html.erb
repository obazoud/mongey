<% if payment.errors.any? %>
<div class="row">
  <div class="alert-message block-message error span7 offset1">
    <p><strong>Form is invalid!</strong> Please correct these errors</h3>
    <ul>
      <% for message in payment.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %><%= form_for payment, :remote => true do |f| %>
<fieldset>
<div class="clearfix">
  <%= f.label :account %>
  <div class="input">
    <%= collection_select(:payment, :account_id, current_user.bankaccounts.all, :id, :name) %> 
  </div>
</div>
<div class="clearfix">
  <%= f.label :payee %>
  <div class="input">
  	<%= f.text_field :payee_name %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :date %>
  <div class="input">
  	<%= f.text_field :operation_date %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :amount %>
  <div class="input">
  	<%= f.text_field :amount %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :memo %>
  <div class="input">
  	<%= f.text_field :memo %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :category %>
  <div class="input">
  	<%= collection_select(:payment, :category_id, Category.all, :id, :name)  %>
  </div>
</div>
<div class="actions">
	<%= f.submit "Create payment", :class => "btn primary" %>
	<%= link_to "Cancel", '#', :class => "btn close-btn" %>
</div>
</fieldset>
<% end %>