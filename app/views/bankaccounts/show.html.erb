<div class="page-header">
  <h1><%= @bankaccount.name %>
    <small><%= @bankaccount.number %></small>
  </h1>
</div>
<p class="balance"><%= format_currency(@bankaccount.balance, @bankaccount.currency) %></p>
<hr /> 
<div class="transactions">
  <table width="100%">
    <thead>
    <tr>
      <th class="right">date</th>
      <th>memo</th>
      <th class="right">amount</th>
      <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% @bankaccount.transactions.each do |t| %>
      <tr>
        <td class="right"><%= t.event.operation_date %></td>
        <td><%= t.memo %></td>
        <td class="right"><%= format_currency(t.credit - t.debit, @bankaccount.currency) %></td>
        <td class="right">&nbsp;</td>
      </tr>
    <% end %> 
   </tbody>
  </table>
</div>  
