<% if @user.errors.any? %>
  <div class="alert-message block-message error">
    <p><strong>Form is invalid!</strong> Please correct these errors</h3>
    <ul>
      <% for message in @user.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @user do |f| %>
  <fieldset>
  <legend>Create new user</legend>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
      <span class="help-block">A confirmation mail will be sent to this address.</span>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :username %>      
    <div class="input">
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :currency %>      
    <div class="input">
      <%= collection_select(:user, :currency_id, Currency.all, :id, :code) %>
    </div>
  </div>
  <hr />
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password_confirmation %>
    <div class="input">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => ["btn", "primary"] %>
  </div>
</fieldset>
<% end %>
