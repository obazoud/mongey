<!DOCTYPE html>
<html>
<head>
  <title>Mongey</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="userbar">
<div id="title">mongey</div>
<div id="user">
<% if @current_user %>
  Logged in as <%= link_to @current_user.username, @current_user %>. <%= link_to 'Log out', logout_path %>
<% else %>
  Please <%= link_to 'sign up', signup_path %> or <%= link_to 'log in', login_path %>.
<% end %>
</div>
</div>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
<div id="container">
  <%= yield %>
</div>
</body>
</html>
