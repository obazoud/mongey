<% if transfer.errors.any? %>
<div class="row">
  <div class="alert-message block-message error span7 offset1">
    <p><strong>Form is invalid!</strong> Please correct these errors</h3>
    <ul>
      <% for message in transfer.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %><%= form_for transfer, :remote => true do |f| %>
<fieldset>
<div class="clearfix">
  <%= f.label :from_account %>
  <div class="input">
    <%= collection_select(:transfer, :from_account_id, current_user.bankaccounts.all, :id, :name) %> 
  </div>
</div>
<div class="clearfix">
  <%= f.label :to_account %>
  <div class="input">
  	<%= collection_select(:transfer, :to_account_id, current_user.accounts.all, :id, :name) %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :date %>
  <div class="input">
  	<%= f.text_field :operation_date %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :amount %>
  <div class="input">
  	<%= f.text_field :amount %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :memo %>
  <div class="input">
  	<%= f.text_field :memo %>
  </div>
</div>
<div class="actions">
	<%= f.submit "Create transfer", :class => "btn primary" %>
	<%= link_to "Cancel", '#', :class => "btn close-btn" %>
</div>
</fieldset>
<% end %>